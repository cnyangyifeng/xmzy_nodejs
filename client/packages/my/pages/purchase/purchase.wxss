.service-plan {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx;
  padding: 40rpx;
  border: 1rpx solid #d9d9d9;
  background-color: #fff;
  font-family: 'Trebuchet MS', sans-serif;
}

.service-plan-hd {
  flex: 2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.heart-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}

.hearts {
  color: #f76260;
  font-size: 24px;
  font-weight: 600;
}

.service-plan-bd {
  flex: 4;
  display: flex;
  justify-content: center;
  align-items: center;
}

.price {
  font-size: 32px;
  font-weight: 600;
}

.cny {
  margin-left: 20rpx;
  color: #666;
}

.service-plan-ft {
  flex: 2;
  display: flex;
  align-items: center;
}

.buy-btn {
  width: 100%;
}
