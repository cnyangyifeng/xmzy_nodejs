@import '../../assets/styles/animate.wxss';

/* .interview-page */

.interview-page {
  background-color: #22292c;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  margin: 0;
}

/*= .interview-page-hd =*/

.interview-page-hd {
  flex: none;
  display: flex;
  height: 196rpx;
}

/*== .student-view ==*/

.student-view {
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #333;
}

/*=== .student-avatar ===*/

.student-avatar {
  flex: none;
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius: 50%;
}

/*=== .student-info ===*/

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 40rpx;
}

/*==== .student-nick-name ====*/

.student-nick-name {
  color: #fff;
  max-width: 320rpx;
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*==== .student-assets ====*/

.student-assets {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.student-asset {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  padding: 10rpx 0;
  border-radius: 40rpx;
  background-color: #333;
}

.student-asset-icon {
  width: 40rpx;
  height: 40rpx;
}

.student-asset-icon.left {
  margin-left: 20rpx;
}

.student-asset-icon.right {
  margin-right: 20rpx;
}

.student-asset-value {
  margin: 0 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/*= .interview-page-bd =*/

.interview-page-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/*== .loader-view ==*/

.loader-view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/*=== .loader-halo ===*/

.loader-halo {
  display: flex;
  flex: none;
  width: 200rpx;
  height: 200rpx;
  border: 20rpx solid transparent;
  border-top: 20rpx solid #999;
  border-bottom: 20rpx solid #999;
  border-radius: 50%;
}

.spinner {
  animation-duration: 3s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  animation-name: loading;
}

@keyframes loading {
  0% {
    transform-origin: center;
    transform: rotateZ(0);
  }

  100% {
    transform-origin: center;
    transform: rotateZ(360deg);
  }
}

/*=== .loader-icon ===*/

.loader-icon {
  position: absolute;
  z-index: 1000;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

/*== .tutor-view ==*/

.tutor-view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/*=== .tutor-avatar ===*/

.tutor-avatar {
  flex: none;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

/*=== .tutor-nick-name ===*/

.tutor-nick-name {
  flex: none;
  color: #fff;
  max-width: 320rpx;
  margin-top: 40rpx;
  font-size: 40rpx;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
}

/*=== .tutor-intro ===*/

.tutor-intro {
  flex: none;
  display: flex;
  color: #fff;
  max-width: 640rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
}

/*=== .tutor-greetings-btn ===*/

.tutor-greetings-btn {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  margin-top: 40rpx;
  padding: 20rpx;
  border-radius: 68rpx;
  background-color: #333;
}

.tutor-greetings-btn-icon {
  flex: none;
  width: 48rpx;
  height: 48rpx;
}

/*= .interview-page-ft =*/

.interview-page-ft {
  flex: none;
  display: flex;
  justify-content: center;
  height: 320rpx;
}

/*== .toolbar-view ==*/

.toolbar-view {
  flex: none;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #333;
}

/*=== .action-btn-wrapper ===*/

.action-btn-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 240rpx;
  margin: 40rpx 64rpx;
}

/*=== .action-btn-space ===*/

.action-btn-space {
  flex: none;
}

/*=== .action-btn ===*/

.action-btn {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.action-btn.refresh {
  background-color: rgba(247, 98, 96, 1.0); /* #f76260 */
}

.action-btn.enter {
  background-color: rgba(16, 174, 255, 1.0); /* #10aeff */
}

.action-btn-icon {
  flex: none;
  width: 64rpx;
  height: 64rpx;
}

/*=== .action-btn-label ===*/

.action-btn-label {
  flex: none;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/*= .grade-selector =*/

.grade-selector {
  position: absolute;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: rgba(34, 41, 44, 0.9); /* hex: #22292c */
}

/*= .grade-panel =*/

.grade-panel {
  display: flex;
  flex-direction: column;
  margin: 80rpx;
  padding: 80rpx;
  background-color: #efeff4;
  border-radius: 5px;
}

.grade-panel .question {
  font-size: 18px;
}

.grade-panel .weui-btn {
  width: 100%;
  text-indent: 20px;
  letter-spacing: 20px;
}
