<view class="page">
  <block wx:if="{{userInfo}}">
    <view class="page__bd">
      <view class="weui-cells__title"></view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image class="weui-cell__hd_large_icon" src="{{userInfo.avatarUrl}}"></image>
          </view>
          <view class="weui-cell__bd">
            <view>{{userInfo.nickName}}</view>
            <view class="weui-cell__bd_desc">
              <text>剩余</text>
              <text class="vouchers-count">{{vouchersCount}}</text>
              <text>张熊猫券</text>
            </view>
          </view>
        </view>
      </view>
      <view class="weui-cells__title"></view>
      <view class="weui-cells weui-cells_after-title">
        <navigator url="../../packages/my/pages/reviews/reviews" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image class="weui-cell__hd_icon" src="../../assets/images/reviews_fill.svg"></image>
          </view>
          <view class="weui-cell__bd">作业本</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
      </view>
      <view class="weui-cells__title"></view>
      <view class="weui-cells weui-cells_after-title">
        <navigator url="../../packages/my/pages/servicePlans/servicePlans" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image class="weui-cell__hd_icon" src="../../assets/images/vouchers_fill.svg"></image>
          </view>
          <view class="weui-cell__bd">买券</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
      </view>
      <view class="weui-cells__title"></view>
      <view class="weui-cells weui-cells_after-title">
        <navigator url="../../packages/my/pages/index/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image class="weui-cell__hd_icon" src="../../assets/images/cc_fill.svg"></image>
          </view>
          <view class="weui-cell__bd">客服</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="setupCellTap">
          <view class="weui-cell__hd">
            <image class="weui-cell__hd_icon" src="../../assets/images/setup_fill.svg"></image>
          </view>
          <view class="weui-cell__bd">设置</view>
          <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="page__hd">
      <image class="logo" src="../../assets/images/logo.jpg"></image>
      <view class="page__desc">中小学家庭作业同步辅导</view>
      <button class="weui-btn login-btn" type="primary" bindtap="loginButtonTap">立即体验</button>
    </view>
  </block>
</view>