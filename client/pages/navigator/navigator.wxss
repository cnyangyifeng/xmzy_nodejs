@import '../../assets/styles/animate.wxss';

/* .navigator-page */

.navigator-page {
  background-color: #22292c;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  margin: 0;
}

/*= .navigator-page-hd =*/

.navigator-page-hd {
  flex: none;
  display: flex;
  height: 196rpx;
}

/*== .student-view ==*/

.student-view {
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #333;
}

/*=== .student-avatar ===*/

.student-avatar {
  flex: none;
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius: 50%;
}

/*=== .student-info ===*/

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 40rpx;
}

/*==== .student-nick-name ====*/

.student-nick-name {
  color: #fff;
  max-width: 320rpx;
  font-size: 36rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*==== .student-assets ====*/

.student-assets {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.student-asset {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  padding: 10rpx 0;
  border-radius: 40rpx;
  background-color: #333;
}

.student-asset-icon {
  width: 40rpx;
  height: 40rpx;
}

.student-asset-icon.left {
  margin-left: 20rpx;
}

.student-asset-icon.right {
  margin-right: 20rpx;
}

.student-asset-value {
  margin: 0 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/*= .navigator-page-bd =*/

.navigator-page-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/*== .navigator-row ==*/

.navigator-row {
  flex: 1;
  display: flex;
}

.navigator-row.tall {
  flex: 2;
}

/*=== .navigator-cell ===*/

.navigator-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
  border-radius: 5px;
  background-color: rgba(51, 51, 51, 0.8); /* #333 */
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx;
}

.navigator-cell.favorite-tutors {
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.navigator-cell.invite-tutor {
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.navigator-cell.invite-tutor.btn-fix {
  line-height: normal;
}

.navigator-cell.quick-match {
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
}

.navigator-cell.contacted-tutors {
  flex-direction: row;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
}

.navigator-cell-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
}

.navigator-cell.quick-match .navigator-cell-icon {
  width: 120rpx;
  height: 120rpx;
}
